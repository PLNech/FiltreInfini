{
  "manifest_version": 3,
  "name": "FiltreInfini",
  "version": "0.1.1",
  "description": "Advanced tab management for Firefox mobile - powerful queries, bulk operations, and a three-tier workflow",
  "author": "PLNech",
  "homepage_url": "https://github.com/PLNech/FiltreInfini",

  "permissions": [
    "tabs",
    "storage",
    "history",
    "alarms",
    "scripting",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "FiltreInfini - Manage Tabs",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "developer": {
    "name": "PLNech",
    "url": "https://github.com/PLNech"
  },

  "background": {
    "scripts": [
      "lib/storage.js",
      "lib/group-manager.js",
      "lib/metadata-storage.js",
      "lib/domain-knowledge.js",
      "lib/context-features.js",
      "lib/feedback-manager.js",
      "lib/history-settings.js",
      "lib/history-storage.js",
      "lib/domain-ontology.js",
      "lib/history-analyzer.js",
      "background/ml-worker.js",
      "background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/metadata-extractor.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "lib/vendor/models/embeddings/*",
        "lib/vendor/models/classification/*",
        "lib/vendor/models/ner/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "filtre-infini@example.com",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "strict_min_version": "120.0"
    }
  }
}
