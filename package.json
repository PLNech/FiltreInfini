{
  "name": "filtre-infini",
  "version": "0.1.0",
  "description": "Advanced tab management extension for Firefox mobile",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "echo 'Unit tests not yet configured'",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "dev": "web-ext run --source-dir=. --target=firefox-desktop --start-url about:debugging#/runtime/this-firefox --start-url about:blank",
    "dev:android": "web-ext run --source-dir=. --target=firefox-android",
    "lint": "web-ext lint --source-dir=.",
    "build": "web-ext build --source-dir=. --artifacts-dir=web-ext-artifacts"
  },
  "keywords": [
    "firefox",
    "extension",
    "tabs",
    "mobile",
    "productivity"
  ],
  "author": "",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "web-ext": "^8.3.0"
  }
}
