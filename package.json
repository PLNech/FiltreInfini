{
  "name": "filtre-infini",
  "version": "0.1.1",
  "description": "Advanced tab management extension for Firefox mobile",
  "private": true,
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "dev": "web-ext run --source-dir=. --target=firefox-desktop --start-url about:debugging#/runtime/this-firefox",
    "dev:android": "web-ext run --source-dir=. --target=firefox-android",
    "lint": "web-ext lint --source-dir=.",
    "build": "web-ext build --source-dir=. --artifacts-dir=web-ext-artifacts"
  },
  "keywords": [
    "firefox",
    "extension",
    "tabs",
    "mobile",
    "productivity"
  ],
  "author": "PLNech",
  "homepage": "https://github.com/PLNech/FiltreInfini",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PLNech/FiltreInfini.git"
  },
  "bugs": {
    "url": "https://github.com/PLNech/FiltreInfini/issues"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.8",
    "vitest": "^3.2.4",
    "web-ext": "^8.3.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2"
  }
}
